{
  "compilerOptions": {
    "target": "ES5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2015",
      "dom"
    ],
    "types": [
      "node",
      "jasmine"
    ],
    "noImplicitAny": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "example"
  ],
  "files": [
    "./src/index.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "./aot",
    "strictMetadataEmit": true
  }
}